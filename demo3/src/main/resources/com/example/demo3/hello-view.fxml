<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.demo3.HelloController">
    <padding>
        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
    </padding>

    <TextArea fx:id="printedText" VBox.vgrow="ALWAYS" editable="false"/>

    <HBox spacing="20">
        <TextField fx:id="enterText" HBox.hgrow="ALWAYS"/>
        <Button text="Print Text" onAction="#PrintText" defaultButton="true"/>
    </HBox>

</VBox>

